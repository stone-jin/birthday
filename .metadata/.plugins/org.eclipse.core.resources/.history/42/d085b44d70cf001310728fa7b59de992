	public static String getFestvial(int month,int day){
		if(month >= 1 && month <= 12){
			if(day >= 1 && day <= GRE_FESTVIAL[month - 1].length)
				return GRE_FESTVIAL[month - 1][day - 1];
		}
		System.out.println("参数传入有误");
		return "参数传入有误";
	}
