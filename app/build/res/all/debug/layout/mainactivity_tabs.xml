<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="horizontal"
    >
    
    <RadioGroup 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <RadioButton 
            android:id="@+id/mainactivity_tabs_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:button="@null"
            android:gravity="center_horizontal"
            android:text="生日"
            android:textSize="12sp"
            android:textColor="@drawable/mainactivity_tabs_textcolor"
            android:background="@drawable/mainactivity_tabs_radiobutton"
            android:drawableTop="@drawable/mainactivity_tabs_birth"
            />
        
        <RadioButton 
            android:id="@+id/mainactivity_tabs_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:button="@null"
            android:gravity="center_horizontal"
            android:text="短信祝福"
            android:textSize="12sp"
            android:textColor="@drawable/mainactivity_tabs_textcolor"
            android:background="@drawable/mainactivity_tabs_radiobutton"
            android:drawableTop="@drawable/mainactivity_tabs_sms"
            />
        
        <RadioButton 
            android:id="@+id/mainactivity_tabs_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:button="@null"
            android:gravity="center_horizontal"
            android:text="个人中心"
            android:textSize="12sp"
            android:textColor="@drawable/mainactivity_tabs_textcolor"
            android:background="@drawable/mainactivity_tabs_radiobutton"
            android:drawableTop="@drawable/mainactivity_tabs_center"
            />
        
        <RadioButton 
            android:id="@+id/mainactivity_tabs_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:button="@null"
            android:gravity="center_horizontal"
            android:text="更多"
            android:textSize="12sp"
            android:textColor="@drawable/mainactivity_tabs_textcolor"
            android:background="@drawable/mainactivity_tabs_radiobutton"
            android:drawableTop="@drawable/mainactivity_tabs_more"
            />
        
    </RadioGroup>

</LinearLayout>
